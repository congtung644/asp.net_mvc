@model LiteCommerce.Admin.Models.OrderPaginationResult
@{
    ViewBag.Title = "Manage Order";
    int i = 0;
}
<div class="box box-primary">
    <form action="~/Order" method="get">
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Input search value..." name="SearchValue" value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
        </form>
</div>
<div class="container-fluid row lc-margin-bottom">
    <div class="col-sm-8">
        There are <b>@ViewBag.rowCount</b> Order. Page 1/100
    </div>
    <div class="col-md-4 text-right">
        <div class="btn-group">
            <a href="~/Order/Create" class="btn btn-sm btn-primary">Add Order</a>
            <button type="button" class="btn btn-sm btn-danger">Delete Orders</button>
        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:30px">
                        <input type="checkbox" />
                    </th>
                    <th style="width:50px">#</th>
                    <th style="width:auto">Customer</th>
                    <th style="width:200px">Employee</th>
                    <th style="width:200px">OrderDate</th>
                    <th style="width:auto">RequiredDate</th>
                    <th style="width:200px">ShipperDate</th>
                    <th style="width:200px">Freight</th>
                    <th style="width:200px">ShipAddress</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.data)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="OrderID" value="@order.OrderID" />
                        </td>
                        <td>@(++i)</td>
                        <td>
                            <span class="lc-company-name">
                                
                            </span>
                        </td>
                        <td>
                            <span class="lc-company-name">
                               
                            </span>
                        </td>
                        <td>
                            <span class="lc-company-name">
                               @order.OrderDate
                            </span>                         
                        </td>
                        <td>
                            <span style="display:block">@order.RequiredDate</span>
                           
                        </td>
                        <td>
                            <span style="display:block">@order.ShippedDate</span>

                        </td>
                        <td>
                            <span style="display:block">@order.Freight</span>

                        </td>
                        <td>
                            <span style="display:block">@order.ShipAddress</span>
                        </td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-default"  href="~/Order/Create/@order.OrderID/">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix text-center">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>